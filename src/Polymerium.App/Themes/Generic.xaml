    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Polymerium.App.Themes">


    <x:Double x:Key="TinyGap">4</x:Double>
    <x:Double x:Key="SmallGap">12</x:Double>
    <x:Double x:Key="MediumGap">24</x:Double>
    <x:Double x:Key="LargeGap">36</x:Double>

    <Thickness x:Key="TinyMargin">4</Thickness>
    <Thickness x:Key="SmallMargin">12</Thickness>
    <Thickness x:Key="MediumMargin">24</Thickness>
    <Thickness x:Key="LargeMargin">36</Thickness>

    <Thickness x:Key="PageContentMargin">32,48,32,32</Thickness>
    <Thickness x:Key="PageContentNoHeaderMargin">32</Thickness>

    <CornerRadius x:Key="TinyCornerRadius">5</CornerRadius>
    <CornerRadius x:Key="SmallCornerRadius">10</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">15</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">25</CornerRadius>
</ResourceDictionary>

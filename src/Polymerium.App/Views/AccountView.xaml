<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="Polymerium.App.Views.AccountView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Polymerium.App.Controls"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Margin="{StaticResource PageContentMargin}" Spacing="{StaticResource TinyGap}">
        <ListView SelectionMode="None">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <toolkit:WrapPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
            <controls:CardButton CornerRadius="{StaticResource CardMediumCornerRadius}">
                <controls:CardButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Set as default">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE930;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Remove"
                                        Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xECC9;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </controls:CardButton.Flyout>
                <StackPanel Spacing="{StaticResource SmallGap}">
                    <Border CornerRadius="{StaticResource CardSmallCornerRadius}" Width="160" Height="160">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#839EFF" />
                                <GradientStop Offset="1" Color="#79FFCF" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <toolkit:ImageEx Width="140"
                                         Source="https://starlightskins.lunareclipse.studio/skin-render/default/Dearain/face"
                                         VerticalAlignment="Bottom" HorizontalAlignment="Center" />
                    </Border>
                    <TextBlock Text="Dearain" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Microsoft" Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                        <FontIcon Grid.Column="1" Glyph="&#xf058;"
                                  Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                  FontSize="{StaticResource ButtonFontIconFontSize}"
                                  Style="{StaticResource FontAwesomeSolidFontIconStyle}" />
                    </Grid>
                </StackPanel>
            </controls:CardButton>
        </ListView>
        <controls:CardButton CornerRadius="{StaticResource CardMediumCornerRadius}" Background="Transparent"
                             BorderBrush="Transparent" Padding="0">
            <controls:CardButton.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem Text="Microsoft">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xf3ca;" Style="{StaticResource FontAwesomeBrandsFontIconStyle}" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="authlib-injector">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe2ca;" Style="{StaticResource FontAwesomeSolidFontIconStyle}" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </controls:CardButton.Flyout>
            <Grid>
                <controls:DashBorder>
                    <StackPanel Orientation="Horizontal" Margin="{StaticResource MediumMargin}"
                                HorizontalAlignment="Center" Spacing="{StaticResource MediumGap}">
                        <FontIcon Glyph="&#xf007;" FontSize="48"
                                  Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                  Style="{StaticResource FontAwesomeRegularFontIconStyle}" />
                        <TextBlock Text="Add" Style="{StaticResource TitleTextBlockStyle}"
                                   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </StackPanel>
                </controls:DashBorder>
            </Grid>
        </controls:CardButton>
    </StackPanel>
</Page>
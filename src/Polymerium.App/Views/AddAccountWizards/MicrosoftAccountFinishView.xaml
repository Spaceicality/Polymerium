<Page
    x:Class="Polymerium.App.Views.AddAccountWizards.MicrosoftAccountFinishView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Spacing="8">
            <TextBlock x:Uid="MicrosoftFinishView_Header" Style="{StaticResource SubtitleTextBlockStyle}" />
            <TextBlock x:Uid="MicrosoftFinishView_Label0" />
            <ui:ImageEx Stretch="Fill" Width="82" Height="82" HorizontalAlignment="Center"
                        Source="{x:Bind AvatarUrl,Mode=OneWay}" />
            <TextBlock Text="{x:Bind Username}" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>

</Page>
<Page
    x:Class="Polymerium.App.Views.AddAccountWizards.MicrosoftAccountIntroView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Polymerium.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="8">
            <TextBlock x:Uid="MicrosoftAccountIntroView_Header"  Style="{StaticResource SubtitleTextBlockStyle}" />
            <controls:Card Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <TextBlock x:Uid="MicrosoftAccountIntroView_Readme"  />
            </controls:Card>
            <TextBlock x:Uid="MicrosoftAccountIntroView_TipLabel"  />
        </StackPanel>
    </Grid>
</Page>
<Page
    x:Class="Polymerium.App.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:controls="using:Polymerium.App.Controls"
    xmlns:converters="using:Polymerium.App.Converters"
    xmlns:models="using:Polymerium.App.Models"
    mc:Ignorable="d" Loaded="Page_Loaded">
    <Page.Resources>
        <converters:DateTimeOffsetToHumanStringConverter x:Key="DateTimeOffsetToHumanStringConverter" />
    </Page.Resources>
    <Grid ColumnDefinitions="*,Auto">
        <Grid RowDefinitions="Auto,*">
            <controls:Card Margin="5,0,5,5" Height="188" Padding="0">
                <Grid>
                    <Grid.ChildrenTransitions>
                        <EntranceThemeTransition />
                    </Grid.ChildrenTransitions>
                    <Grid ColumnDefinitions="4*,6*">
                        <toolkit:ImageEx Height="140" Width="140" HorizontalAlignment="Center"
                                         VerticalAlignment="Bottom" IsCacheEnabled="True" Stretch="UniformToFill"
                                         Source="{x:Bind ViewModel.Context.SelectedAccount,Mode=OneWay,Converter={StaticResource AccountToBustAvatarConverter}}"
                                         PlaceholderStretch="UniformToFill"
                                         PlaceholderSource="ms-appx:///Assets/Placeholders/default_avatar_bust.png" />
                        <StackPanel Grid.Column="1" Margin="15" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}">
                                <Run x:Uid="HomeView_HelloLabel" Text="你好" />
                                <Run
                                    Text="{x:Bind ViewModel.Context.SelectedAccount.Nickname,Mode=OneWay,Converter={StaticResource NullToParameterConverter},ConverterParameter=未登录}" />
                            </TextBlock>
                            <TextBlock Text="{x:Bind ViewModel.Tip}" TextWrapping="WrapWholeWords"
                                       Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                       Style="{ThemeResource BodyTextBlockStyle}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </controls:Card>
            <ScrollViewer Grid.Row="1">
                <StackPanel>
                    <Grid ColumnDefinitions="*,Auto" Margin="20,20,20,5">
                        <TextBlock x:Uid="HomeView_RecentPlayLabel.Text" Text="最近游玩" />
                    </Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ListView ItemsSource="{x:Bind ViewModel.RecentPlays}" Margin="0,0,0,5">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:RecentPlayedItemModel">
                                    <controls:RecentPlayedItemControl
                                        Style="{StaticResource DefaultRecentPlayedItemStyle}"
                                        Command="{x:Bind Command}"
                                        CommandParameter="{x:Bind InstanceId}">
                                        <Grid RowDefinitions="Auto,*" MaxWidth="100">
                                            <toolkit:ImageEx Width="80" Height="80" Margin="10,10,10,5"
                                                             CornerRadius="10"
                                                             Source="{x:Bind ThumbnailFile}"
                                                             PlaceholderSource="ms-appx:///Assets/Placeholders/default_world_icon.png"
                                                             Stretch="UniformToFill" />
                                            <Grid Grid.Row="1" RowDefinitions="Auto,*">
                                                <Grid.ChildrenTransitions>
                                                    <ContentThemeTransition />
                                                </Grid.ChildrenTransitions>
                                                <TextBlock Margin="10,5,10,2" Text="{x:Bind Name}"
                                                           Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                           Foreground="{ThemeResource ApplicationForegroundThemeBrush}" />
                                                <Grid ColumnDefinitions="Auto,*" Grid.Row="1"
                                                      VerticalAlignment="Bottom"
                                                      Margin="10,2,10,10">
                                                    <FontIcon Margin="0,0,2,0" VerticalAlignment="Bottom"
                                                              Glyph="&#xE121;"
                                                              FontSize="11" />
                                                    <TextBlock Grid.Column="1" HorizontalAlignment="Right"
                                                               FontSize="11"
                                                               Text="{x:Bind LastPlayedAt,Converter={StaticResource DateTimeOffsetToHumanStringConverter}}"
                                                               Style="{ThemeResource BodyTextBlockStyle}"
                                                               Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </controls:RecentPlayedItemControl>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Column="1" RowDefinitions="Auto,*">
            <ProgressRing IsIndeterminate="True" Grid.RowSpan="9" VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Visibility="{x:Bind IsNewsLoading,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter}}" />
            <TextBlock x:Uid="HomeView_NewsLabel" Text="新闻" Margin="5,0,10,5" />
            <Grid Grid.Row="1">
                <ListView ItemsSource="{x:Bind News}" Width="256" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:HomeNewsItemModel">
                            <controls:Card x:Name="Container" Margin="5,5,10,5" Padding="0">
                                <StackPanel>
                                    <toolkit:ConstrainedBox AspectRatio="350:224">
                                        <toolkit:ImageEx Source="{x:Bind ImageSource}" CornerRadius="{Binding CornerRadius,Mode=OneWay,ElementName=Container,Converter={StaticResource TopCornerRadiusFilterConverter}}"
                                                         ToolTipService.ToolTip="{x:Bind ImageSource}" Stretch="Fill" />
                                    </toolkit:ConstrainedBox>
                                    <Grid RowDefinitions="*,Auto" Margin="12">
                                        <StackPanel>
                                            <TextBlock Text="{x:Bind Title}"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                                            <TextBlock Text="{x:Bind Text}" TextWrapping="WrapWholeWords" />
                                        </StackPanel>
                                        <Grid Grid.Row="1">
                                            <TextBlock
                                                ToolTipService.ToolTip="{x:Bind Date,Converter={StaticResource DateTimeOffsetToStringConverter}}"
                                                Text="{x:Bind Date,Converter={StaticResource DateTimeOffsetToHumanStringConverter}}"
                                                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                HorizontalAlignment="Left" VerticalAlignment="Center" />
                                            <HyperlinkButton x:Uid="HomeView_News_ReadMoreLink" Content="查看详情" ToolTipService.ToolTip="{x:Bind ReadMore}"
                                                             NavigateUri="{x:Bind ReadMore}"
                                                             HorizontalAlignment="Right" VerticalAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </controls:Card>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Page>
<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="Polymerium.App.Views.InstanceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:controls="using:Polymerium.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled"
                      HorizontalScrollBarVisibility="Disabled" HorizontalScrollMode="Disabled">
            <StackPanel Margin="{StaticResource PageContentMargin}" Spacing="{StaticResource SmallGap}">
                <StackPanel Orientation="Horizontal" Spacing="{StaticResource SmallGap}">
                    <toolkit:ImageEx Source="{x:Bind ViewModel.Model.Thumbnail,Mode=OneWay}" Width="64"
                                     CornerRadius="{StaticResource TinyCornerRadius}" />
                    <TextBlock Style="{StaticResource HeaderTextBlockStyle}"
                               Text="{x:Bind ViewModel.Model.Inner.Name,Mode=OneWay}" TextTrimming="WordEllipsis" />
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="{StaticResource SmallGap}">
                        <controls:IconLabel VerticalAlignment="Bottom">
                            <controls:IconLabel.Icon>
                                <FontIcon Glyph="&#xE7FC;" FontSize="30" />
                            </controls:IconLabel.Icon>
                            <controls:IconLabel.Header>
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="TYPE" />
                            </controls:IconLabel.Header>
                            <TextBlock Text="{x:Bind ViewModel.Model.Type,Mode=OneWay}" />
                        </controls:IconLabel>
                        <controls:IconLabel VerticalAlignment="Bottom">
                            <controls:IconLabel.Icon>
                                <FontIcon Glyph="&#xE734;" FontSize="30" />
                            </controls:IconLabel.Icon>
                            <controls:IconLabel.Header>
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="VERSION" />
                            </controls:IconLabel.Header>
                            <TextBlock Text="{x:Bind ViewModel.Model.Inner.Metadata.Version,Mode=OneWay}" />
                        </controls:IconLabel>
                        <controls:IconLabel VerticalAlignment="Bottom">
                            <controls:IconLabel.Icon>
                                <FontIcon Glyph="&#xE787;" FontSize="30" />
                            </controls:IconLabel.Icon>
                            <controls:IconLabel.Header>
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="LASTPLAY" />
                            </controls:IconLabel.Header>
                            <TextBlock Text="{x:Bind ViewModel.Model.PlayedAt,Mode=OneWay}" />
                        </controls:IconLabel>
                        <controls:IconLabel VerticalAlignment="Bottom">
                            <controls:IconLabel.Icon>
                                <FontIcon Glyph="&#xE823;" FontSize="30" />
                            </controls:IconLabel.Icon>
                            <controls:IconLabel.Header>
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="PLAYTIME" />
                            </controls:IconLabel.Header>
                            <TextBlock Text="{x:Bind ViewModel.Model.PlayTime,Mode=OneWay}" />
                        </controls:IconLabel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <HyperlinkButton Command="{x:Bind ViewModel.GotoWorkbenchViewCommand}"
                                         CommandParameter="{x:Bind ViewModel.Model.Key,Mode=OneWay}">
                            <SymbolIcon Symbol="Setting" />
                        </HyperlinkButton>
                    </StackPanel>
                </Grid>
                <controls:Card Padding="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="{StaticResource TinyGap}">
                            <HyperlinkButton IsEnabled="False" Content="Mods" />
                            <HyperlinkButton IsEnabled="False" Content="Resource Packs" />
                            <HyperlinkButton IsEnabled="False" Content="Shader Packs" />
                            <HyperlinkButton IsEnabled="False" Content="Screenshots" />
                            <HyperlinkButton IsEnabled="False" Content="Saves" />
                        </StackPanel>
                        <HyperlinkButton Grid.Column="1">
                            <StackPanel Orientation="Horizontal" Spacing="{StaticResource TinyGap}">
                                <FontIcon Glyph="&#xE8A7;" FontSize="16" />
                                <TextBlock Text="Open Folder" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                </controls:Card>
                <toolkit:ConstrainedBox AspectRatio="8:3">
                    <Grid ColumnSpacing="{StaticResource SmallGap}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <controls:Card Grid.Column="0" Grid.ColumnSpan="2">
                            <Grid ColumnSpacing="{StaticResource SmallGap}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="1" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Spacing="{StaticResource SmallGap}">
                                    <StackPanel Orientation="Horizontal" Spacing="{StaticResource TinyGap}">
                                        <FontIcon Glyph="&#xE70B;" FontSize="16" />
                                        <TextBlock Text="Note" />
                                    </StackPanel>
                                    <TextBox AcceptsReturn="True" Text="{x:Bind ViewModel.Model.Note,Mode=TwoWay}" />
                                </StackPanel>
                                <Border Grid.Column="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1,0,0,0" />
                                <toolkit:ConstrainedBox Grid.Column="2" AspectRatio="2:3">
                                    <StackPanel Spacing="{StaticResource SmallGap}">
                                        <StackPanel Orientation="Horizontal" Spacing="{StaticResource TinyGap}">
                                            <FontIcon Glyph="&#xE9D5;" FontSize="16" />
                                            <TextBlock Text="Todo" />
                                        </StackPanel>
                                        <ListView>
                                            <ListViewItem>Buy some coffee</ListViewItem>
                                        </ListView>
                                    </StackPanel>
                                </toolkit:ConstrainedBox>
                            </Grid>
                        </controls:Card>
                        <controls:Card Grid.Column="2" />
                    </Grid>
                </toolkit:ConstrainedBox>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="1">
            <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
                <Grid Margin="12">
                    <HyperlinkButton HorizontalAlignment="Left">
                        <Grid ColumnSpacing="{StaticResource SmallGap}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <toolkit:ImageEx Grid.Column="0" Source="/Assets/Placeholders/default_avatar_face.png"
                                             Width="36" />
                            <StackPanel Grid.Column="1">
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Dearain" />
                                <TextBlock Text="Microsoft" />
                            </StackPanel>
                        </Grid>
                    </HyperlinkButton>
                    <Button Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal" Spacing="{StaticResource SmallGap}">
                            <Image Source="/Assets/Icons/Rocket.svg" Width="16" />
                            <TextBlock Text="PLAY" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
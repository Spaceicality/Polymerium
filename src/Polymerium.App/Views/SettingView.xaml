<Page
    x:Class="Polymerium.App.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Polymerium.App.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:models="using:Polymerium.App.Models"
    mc:Ignorable="d">
    <ScrollViewer>
        <controls:Card Margin="5,0,10,10" Padding="50">
            <StackPanel Spacing="5">
                <StackPanel.ChildrenTransitions>
                    <EntranceThemeTransition />
                </StackPanel.ChildrenTransitions>
                <TextBlock x:Uid="SettingView_Application_Header" Text="应用" Style="{StaticResource SubtitleTextBlockStyle}" />
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE18A;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_Application_SuperPower_Header" Text="使用超能力" />
                                </TextBlock>
                            </StackPanel>
                            <ToggleSwitch IsOn="{x:Bind ViewModel.IsSuperPowerActivated,Mode=TwoWay}" HorizontalAlignment="Right" Margin="0,0,-85,0" />
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <StackPanel Spacing="1">
                        <controls:ExpanderExItem>
                            <TextBlock x:Uid="SettingView_Application_SuperPower_Label0" Text="其实没有超能力" />
                        </controls:ExpanderExItem>
                        <controls:ExpanderExItem>
                            <Button x:Uid="SettingView_Application_SuperPower_UselessButton" Content="点这个按钮也没用" />
                        </controls:ExpanderExItem>
                    </StackPanel>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE164;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_Application_Language_Header" Text="语言" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_Application_Language_Subheader" Text="重启生效"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                            <ComboBox ItemsSource="{x:Bind ViewModel.Languages}" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="models:SettingLanguageItemModel">
                                        <TextBlock Text="{x:Bind DisplayName}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </controls:ExpanderEx.Header>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xF384;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_Application_OfflineImport_Header" Text="强制离线导入整合包" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_Application_OfflineImport_Subheader" Text="不对下载中心添加的整合包进行数据合并"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                            <ToggleSwitch IsOn="{x:Bind ViewModel.ForceImportOffline,Mode=TwoWay}" HorizontalAlignment="Right" Margin="0,0,-85,0" />
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <StackPanel Spacing="1">
                        <InfoBar x:Uid="SettingView_Application_OfflineImport_InfoBar" IsOpen="True" IsClosable="False" Title="注意" Severity="Informational" Message="下载中心添加的整合包会使用在线数据替换包内数据，该选项会禁用在线数据获取和替换。使用离线数据将大大加速导入过程，但会使导入的实例失去上下文信息。"/>
                    </StackPanel>
                </controls:ExpanderEx>
                <TextBlock x:Uid="SettingView_GameGlobal_Header" Text="游戏全局配置" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock x:Uid="SettingView_GameGlobal_Label0" Text="私有实例配置中未设置的项目将会继承全局配置中的对应项目"
                           Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE8B7;" Margin="20" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Uid="SettingView_GameGlobal_AutoSelectJava_Header" Text="自动检测 Java 版本" />
                                    <TextBlock Text="{x:Bind ViewModel.JavaSummary,Mode=OneWay}"
                                               Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </StackPanel>
                            </StackPanel>
                            <ToggleSwitch x:Name="AutoDetectJavaSwitch"
                                          IsOn="{x:Bind ViewModel.AutoDetectJava,Mode=TwoWay}"
                                          VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-85,0" />
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <ContentControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                    IsEnabled="{x:Bind ViewModel.AutoDetectJava,Mode=OneWay,Converter={StaticResource ReverseBoolConverter}}">
                        <StackPanel Spacing="1">
                            <controls:ExpanderExItem>
                                <Grid>
                                    <TextBlock x:Uid="SettingView_GameGlobal_AutoSelectJava_Label0" Text="使用系统中已经预装的 Java 实例" VerticalAlignment="Center" />
                                    <Button x:Uid="SettingView_GameGlobal_AutoSelectJava_OpenPickerButton" x:Name="OpenJavaDialogButton" Content="打开选取对话框" HorizontalAlignment="Right"
                                            Command="{x:Bind ViewModel.OpenPickerAsyncCommand}" />
                                </Grid>
                            </controls:ExpanderExItem>
                            <controls:ExpanderExItem>
                                <Grid>
                                    <TextBlock x:Uid="SettingView_GameGlobal_AutoSelectJava_Label1" Text="使用自定义 Java 路径(精确到 bin/java.exe,lib 所在目录)"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left" />
                                    <ToggleSwitch x:Name="CustomJavaHomeSwitch" Margin="0,0,-85,0" IsOn="False"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right" />
                                </Grid>
                            </controls:ExpanderExItem>
                            <controls:ExpanderExItem>
                                <TextBox IsEnabled="{x:Bind CustomJavaHomeSwitch.IsOn,Mode=OneWay}"
                                         Text="{x:Bind ViewModel.JavaHome,Mode=TwoWay}" />
                            </controls:ExpanderExItem>
                        </StackPanel>
                    </ContentControl>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE9D5;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_GameGlobal_SkipJavaCheck_Header" Text="跳过 Java 兼容性检查" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_GameGlobal_SkipJavaCheck_Subheader" Text="当确定 Java 版本兼容时可开启此项"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                            <ToggleSwitch VerticalAlignment="Center" HorizontalAlignment="Right"
                                          IsOn="{x:Bind ViewModel.SkipJavaVersionCheck,Mode=TwoWay}" Margin="0,0,-85,0" />
                        </Grid>
                    </controls:ExpanderEx.Header>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xEC8F;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_GameGlobal_JavaMemory_Header" Text="Java 虚拟机分配的最大内存" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_GameGlobal_JavaMemory_Subheader" Text="没有自动分配算法，根据经验来设置"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBox Text="{x:Bind ViewModel.JvmMaxMemory,Mode=TwoWay}" />
                                <TextBlock Text="MB" VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </controls:ExpanderEx.Header>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE140;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_GameGlobal_JavaAdditionalArguments_Header" Text="Java 虚拟机附加参数" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_GameGlobal_JavaAdditionalArguments_Subheader" Text="非必要的用于调整虚拟机性能的额外参数"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <StackPanel Spacing="1">
                        <controls:ExpanderExItem>
                            <TextBox Text="{x:Bind ViewModel.AdditionalJvmArugments,Mode=TwoWay}"
                                     IsSpellCheckEnabled="False" />
                        </controls:ExpanderExItem>
                    </StackPanel>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE2B2;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_GameGlobal_WindowSize_Header" Text="游戏窗口初始大小" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_GameGlobal_WindowSize_Subheader" Text="默认 854x480"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <StackPanel Spacing="1">
                        <controls:ExpanderExItem>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock x:Uid="SettingView_GameGlobal_WindowSize_WidthLabel" Text="宽" VerticalAlignment="Center" />
                                <TextBox Grid.Column="1" Text="{x:Bind ViewModel.WindowWidth,Mode=TwoWay}" />
                            </Grid>
                        </controls:ExpanderExItem>
                        <controls:ExpanderExItem>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock x:Uid="SettingView_GameGlobal_WindowSize_HeightLabel" Text="高" VerticalAlignment="Center" />
                                <TextBox Grid.Column="1" Text="{x:Bind ViewModel.WindowHeight,Mode=TwoWay}" />
                            </Grid>
                        </controls:ExpanderExItem>
                    </StackPanel>
                </controls:ExpanderEx>
                <TextBlock x:Uid="SettingView_About_Header" Text="说明" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock>
                    <Run x:Uid="SettingView_About_RepositoryLabel" Text="储存库" />
                    <Hyperlink NavigateUri="https://github.com/d3ara1n/Polymerium">Github</Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Run x:Uid="SettingView_About_IconReferenceLabel" Text="图标素材" />
                    <Hyperlink NavigateUri="https://icons8.com/icons/fluency">icons8</Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Run x:Uid="SettingView_About_CurseForgeLabel" Text="CurseForge 来自" />
                    <Hyperlink NavigateUri="docs.curseforge.com">CurseForge</Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Run x:Uid="SettingView_About_ModrinthLabel" Text="Modrinth 来自" />
                    <Hyperlink NavigateUri="https://docs.modrinth.com">Modrinth</Hyperlink>
                </TextBlock>
            </StackPanel>
        </controls:Card>
    </ScrollViewer>
</Page>
<Page
    x:Class="Polymerium.App.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Polymerium.App.Controls"
    mc:Ignorable="d">
    <ScrollViewer>
        <controls:Card Margin="5,0,10,10" Padding="50">
            <StackPanel Spacing="5">
                <StackPanel.ChildrenTransitions>
                    <EntranceThemeTransition />
                </StackPanel.ChildrenTransitions>
                <TextBlock x:Uid="SettingView_Application_Header" Style="{StaticResource SubtitleTextBlockStyle}" />
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE18A;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_Application_SuperPower_Header" />
                                </TextBlock>
                            </StackPanel>
                            <ToggleSwitch IsOn="{x:Bind ViewModel.IsSuperPowerActivated,Mode=TwoWay}"
                                          HorizontalAlignment="Right" Margin="0,0,-85,0" />
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <StackPanel Spacing="1">
                        <controls:ExpanderExItem>
                            <TextBlock x:Uid="SettingView_Application_SuperPower_Label0" />
                        </controls:ExpanderExItem>
                        <controls:ExpanderExItem>
                            <Button x:Uid="SettingView_Application_SuperPower_UselessButton" />
                        </controls:ExpanderExItem>
                    </StackPanel>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE164;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_Application_Language_Header" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_Application_Language_Subheader"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                            <ComboBox SelectedItem="{x:Bind ViewModel.SelectedLanguage,Mode=TwoWay}"
                                      DisplayMemberPath="DisplayName" ItemsSource="{x:Bind ViewModel.Languages}"
                                      VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </Grid>
                    </controls:ExpanderEx.Header>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xF384;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_Application_OfflineImport_Header" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_Application_OfflineImport_Subheader"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                            <ToggleSwitch IsOn="{x:Bind ViewModel.ForceImportOffline,Mode=TwoWay}"
                                          HorizontalAlignment="Right" Margin="0,0,-85,0" />
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <StackPanel Spacing="1">
                        <InfoBar x:Uid="SettingView_Application_OfflineImport_InfoBar" IsOpen="True" IsClosable="False"
                                 Severity="Informational" />
                    </StackPanel>
                </controls:ExpanderEx>
                <TextBlock x:Uid="SettingView_GameGlobal_Header" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock x:Uid="SettingView_GameGlobal_Label0"
                           Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE8B7;" Margin="20" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Uid="SettingView_GameGlobal_AutoSelectJava_Header" />
                                    <TextBlock Text="{x:Bind ViewModel.JavaSummary,Mode=OneWay}"
                                               Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </StackPanel>
                            </StackPanel>
                            <ToggleSwitch x:Name="AutoDetectJavaSwitch"
                                          IsOn="{x:Bind ViewModel.AutoDetectJava,Mode=TwoWay}"
                                          VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-85,0" />
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <ContentControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                    IsEnabled="{x:Bind ViewModel.AutoDetectJava,Mode=OneWay,Converter={StaticResource ReverseBoolConverter}}">
                        <StackPanel Spacing="1">
                            <controls:ExpanderExItem>
                                <Grid>
                                    <TextBlock x:Uid="SettingView_GameGlobal_AutoSelectJava_Label0"
                                               VerticalAlignment="Center" />
                                    <Button x:Uid="SettingView_GameGlobal_AutoSelectJava_OpenPickerButton"
                                            x:Name="OpenJavaDialogButton" HorizontalAlignment="Right"
                                            Command="{x:Bind ViewModel.OpenPickerAsyncCommand}" />
                                </Grid>
                            </controls:ExpanderExItem>
                            <controls:ExpanderExItem>
                                <Grid>
                                    <TextBlock x:Uid="SettingView_GameGlobal_AutoSelectJava_Label1"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left" />
                                    <ToggleSwitch x:Name="CustomJavaHomeSwitch" Margin="0,0,-85,0" IsOn="False"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right" />
                                </Grid>
                            </controls:ExpanderExItem>
                            <controls:ExpanderExItem>
                                <TextBox IsEnabled="{x:Bind CustomJavaHomeSwitch.IsOn,Mode=OneWay}"
                                         Text="{x:Bind ViewModel.JavaHome,Mode=TwoWay}" />
                            </controls:ExpanderExItem>
                        </StackPanel>
                    </ContentControl>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE9D5;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_GameGlobal_SkipJavaCheck_Header" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_GameGlobal_SkipJavaCheck_Subheader"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                            <ToggleSwitch VerticalAlignment="Center" HorizontalAlignment="Right"
                                          IsOn="{x:Bind ViewModel.SkipJavaVersionCheck,Mode=TwoWay}" Margin="0,0,-85,0" />
                        </Grid>
                    </controls:ExpanderEx.Header>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xEC8F;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_GameGlobal_JavaMemory_Header" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_GameGlobal_JavaMemory_Subheader"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBox Text="{x:Bind ViewModel.JvmMaxMemory,Mode=TwoWay}" />
                                <TextBlock Text="MB" VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </controls:ExpanderEx.Header>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE140;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_GameGlobal_JavaAdditionalArguments_Header" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_GameGlobal_JavaAdditionalArguments_Subheader"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <StackPanel Spacing="1">
                        <controls:ExpanderExItem>
                            <TextBox Text="{x:Bind ViewModel.AdditionalJvmArugments,Mode=TwoWay}"
                                     IsSpellCheckEnabled="False" />
                        </controls:ExpanderExItem>
                    </StackPanel>
                </controls:ExpanderEx>
                <controls:ExpanderEx Padding="0">
                    <controls:ExpanderEx.Header>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE2B2;" Margin="20" />
                                <TextBlock VerticalAlignment="Center">
                                    <Run x:Uid="SettingView_GameGlobal_WindowSize_Header" />
                                    <LineBreak />
                                    <Run x:Uid="SettingView_GameGlobal_WindowSize_Subheader"
                                         Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </controls:ExpanderEx.Header>
                    <StackPanel Spacing="1">
                        <controls:ExpanderExItem>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock x:Uid="SettingView_GameGlobal_WindowSize_WidthLabel"
                                           VerticalAlignment="Center" />
                                <TextBox Grid.Column="1" Text="{x:Bind ViewModel.WindowWidth,Mode=TwoWay}" />
                            </Grid>
                        </controls:ExpanderExItem>
                        <controls:ExpanderExItem>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock x:Uid="SettingView_GameGlobal_WindowSize_HeightLabel"
                                           VerticalAlignment="Center" />
                                <TextBox Grid.Column="1" Text="{x:Bind ViewModel.WindowHeight,Mode=TwoWay}" />
                            </Grid>
                        </controls:ExpanderExItem>
                    </StackPanel>
                </controls:ExpanderEx>
                <TextBlock x:Uid="SettingView_About_Header" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock>
                    <Run x:Uid="SettingView_About_RepositoryLabel" />
                    <Hyperlink NavigateUri="https://github.com/d3ara1n/Polymerium">Github</Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Run x:Uid="SettingView_About_IconReferenceLabel" />
                    <Hyperlink NavigateUri="https://icons8.com/icons/fluency">icons8</Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Run x:Uid="SettingView_About_CurseForgeLabel" />
                    <Hyperlink NavigateUri="docs.curseforge.com">CurseForge</Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Run x:Uid="SettingView_About_ModrinthLabel" />
                    <Hyperlink NavigateUri="https://docs.modrinth.com">Modrinth</Hyperlink>
                </TextBlock>
            </StackPanel>
        </controls:Card>
    </ScrollViewer>
</Page>
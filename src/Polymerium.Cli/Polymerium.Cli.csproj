    <ItemGroup>
        <ProjectReference Include="..\Polymerium.Abstractions\Polymerium.Abstractions.csproj"/>
        <ProjectReference Include="..\Polymerium.Core\Polymerium.Core.csproj"/>
    </ItemGroup>

</Project>
